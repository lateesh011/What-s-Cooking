@model Cooking_WebApi.Models.Receipe

@{
    ViewBag.Title = "Details";
}


<html>
<head>
    <title>Receipe Information Page</title>
    <link href="~/Content/Info.css" rel="stylesheet" />
</head>
<body>

    <div class="container-fluid" style="margin-top:20px;">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <a id="backme" class=" nav-link btn btn-primary" style="border-radius: 4px 5px;padding:10px;" href="~/Admin/Index">  Back</a>
            </div>
            <div class="col-md-5"></div>
            
            <div class="col-md-3">

                <button class="nav-link btn btn-success" style=" color:aliceblue; border-radius: 4px 5px;padding:10px;">@Html.ActionLink("Modify", "Edit", new { @id = Model.RId })</button>
                <button class="nav-link btn btn-danger" style="border-radius: 4px 5px;padding:10px;">@Html.ActionLink("Delete", "Delete", new { @id = Model.RId })</button>

            </div>
        </div>

        @{Html.BeginForm();}
        <div class="container-fluid" id="infol">
            <div class="row" style="margin:20px;">
                <label style="color: #283747"><h2>Recipe Name :- @Html.DisplayFor(model => model.RName) (@Html.DisplayFor(model => model.VNB) - @Html.DisplayFor(model => model.State))</h2></label>
                <div class="col-md-5">
                    <div class="row" style="margin:1px;margin-top:8px;">
                        <label id="exampleFormControlFile"><h5>Image :- </h5></label>
                        <img id="imge" src="~/RecipeImg/@Html.DisplayFor(model=>model.Photo)" height="255" width="200" />
                    </div>
                    <p id="line"></p>
                    <div class="row" style="margin:1px;margin-top:5px;">
                        <label style="color: #CB4335" id="you"><h5>Youtube Link :-</h5></label>
                        <iframe id="yout" width="200" height="250" src="@Html.DisplayFor(model=>model.Youtube)"
                                title="YouTube video player" frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                        </iframe>



                    </div>
                </div>
                <div class="col-md-7">
                    <div class="row" style="margin:10px;">
                        <label style="color: #1F618D"><h5>Ingredient :-</h5></label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="10" readonly>@Html.DisplayFor(model=>model.Ingredient)</textarea>
                    </div>
                    <p id="line"></p>
                    <div class="row" style="margin:5px;">
                        <label style="color: #1F618D"><h5>How to Make :-</h5></label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="15" readonly>@Html.DisplayFor(model=>model.HTM)</textarea>
                    </div>
                </div>
            </div>
        </div>
        @{Html.EndForm();}
</body>
</html>
