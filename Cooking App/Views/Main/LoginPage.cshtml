


@model Cooking_App.Models.LoginProfile

@*@{
        ViewBag.Title = "LoginPage";
    }*@

<html >
<head>
    <title>Login Page</title>
    <link href="~/Content/LoginPage.css" rel="stylesheet" />
</head>
<body style="background-image: url('../../image/bg3.jpg'); background-repeat: no-repeat; background-attachment: fixed;
  background-size: cover;" >

    @*@{Html.BeginForm();}*@
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container-fluid" style="margin-top: 100px; margin-bottom: 90px;" >
            <div class="row" id="log">
                <div class="col-md-2"></div>
                <div class="col-md-7">
                    <div class="row" style="border:2px solid #99A3A4;padding:20px;border-radius:4px 4px;">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                            <div class="d-grid gap-2">
                                @Html.ActionLink("Create Account", "SignupPage", null, new { @class = "btn btn-primary" })

                                <h5 style="text-align: center; color: #7F8C8D; margin-bottom: 20px; ">
                                    ---------------------OR---------------------
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-2"></div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <i class="fa fa-user fa-2x" aria-hidden="true" style="margin-top:6px;"></i>&nbsp;&nbsp;
                                    <span style="font-size:25px">Email</span>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <input type="email" id="email" name="email" class="form-control" placeholder="example@gmail.com" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <i class="fa fa-unlock-alt fa-2x" aria-hidden="true" style="margin-top: 20px;"></i>&nbsp;&nbsp;
                                    <span style="font-size:25px">Password</span>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <input type="password" id="password" name="password" class="form-control" style="margin-top:20px;" required />
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-top:20px;">
                            <div class="col-md-4"></div>
                            <div class="col-md-8">
                                <a style="color:blue;font-weight:400" href="~/Main/ForgotPassword">Forget Password</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-8">
                                <div class="modal-footer" style="margin-top:10px;">
                                    <input type="submit" value="Login" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">alert("Invalid Username or Password");</script>
        }
        @if (ViewBag.Msg1 != null)
        {
            <script type="text/javascript">alert("Password Changed Sucessfully");</script>
        }
        @if (ViewBag.Msg2 != null)
        {
            <script type="text/javascript">alert("Given input is not valid");</script>
        }
        <script src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    
    </body>
</html>


