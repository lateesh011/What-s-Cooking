<html>
<head>
    <title>Login Page</title>
    <link href="~/Content/LoginPage.css" rel="stylesheet" />
</head>
<body>

    @*@{Html.BeginForm();}*@
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

       
            <div class="modal-dialog modal-md">
                <div class="modal-content">
                    <div class="row" style="margin-top:10px">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <h4 style="color: #154360;">Forget Password</h4>
                        </div>
                        <div class="col-md-1"></div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-close" id="btnnav1" data-bs-dismiss="modal"></button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10" style="border-top:1px solid black"></div>
                        <div class="col-md-1"></div>
                    </div>
                    <div class="row">&nbsp;</div>
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-4">
                            <span style="color: black;font-weight:600;">Email</span>
                        </div>
                        <div class="col-md-6">
                            <input type="email" id="email" name="email" class="form-control" placeholder="example@gmail.com" required />
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                    <div class="row">&nbsp;</div>
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-4">
                            <span style="color: black;font-weight:600;">Date Of Birth</span>
                        </div>
                        <div class="col-md-6">
                            <input type="date" id="date" name="date" class="form-control" required />
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                    <div class="row">&nbsp;</div>
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-4">
                            <span style="color: black;font-weight:600;">New Password</span>
                        </div>
                        <div class="col-md-6">
                            <input type="password" id="password" name="password" class="form-control" required />
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                    <div class="row">&nbsp;</div>
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10" style="border-top:1px solid black"></div>
                        <div class="col-md-1"></div>
                    </div>
                    <div class="row" style="margin-top:10px">
                        <div class="col-md-6"></div>
                        <div class="col-md-3">
                            <button class="btn btn-primary" id="regbtn" data-dismiss="modal">Submit</button>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-danger" >@Html.ActionLink("Cancel","LoginPage","Main")</button>
                        </div>
                    </div>
                    <div class="row">&nbsp;</div>
                </div>
            </div>
        
    }

        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
                alert("Invalid Username or Password");
            </script>
        }
        @if (ViewBag.Msg1 != null)
        {
            <script type="text/javascript">
                alert("Password Changed Sucessfully");
            </script>
        }
        @if (ViewBag.Msg2 != null)
        {
            <script type="text/javascript">
                alert("Given input is not valid");
            </script>
        }
        <script src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

    </body>
</html>